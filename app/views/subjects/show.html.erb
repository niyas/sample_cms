<%= link_to("<<Back to List", {:action => "list"}, :class => "back-link") %>
<div class="show">
<h2> Show Subjects </h2>
<table summary="Show the Details">
<tr>
<th>Name:</th>
<td><%= @subject.name %></td>
</tr>
<tr>
<th>Position:</th>
<td><%= @subject.position %></td>
</tr>
<tr>
<th>Visible?</th>
<td><%= @subject.visible ? 'true' : 'false' %></td>
</tr>
<tr>
<th>Created:</th>
<td><%= @subject.created_at %></td>
</tr>
<tr>
<th>Updated:</th>
<td><%= @subject.updated_at %></td>
</tr>
</table>
</div>
